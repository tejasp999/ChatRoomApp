<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teja.inclass09.MessageThreadFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"
        android:text="Bob Marley"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/messageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageView"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:text="Current Threads"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/newthread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="Add New Thread" />

    <Button
        android:id="@+id/addThread"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/newthread"
        android:layout_alignStart="@+id/button"
        android:background="@drawable/add"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:background="@drawable/home" />
</RelativeLayout>

</FrameLayout>
